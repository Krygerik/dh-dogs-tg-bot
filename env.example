# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Public IP address shown to players
PUBLIC_IP=185.17.66.195

# Path to Dread Hunger server binary
BINARY_PATH=C:\Users\Server\WindowsServer\DreadHunger\Binaries\Win64\DreadHungerServer-Win64-Shipping.exe

# Ports (single, comma separated, or ranges)
PORTS=7777-7782

# Maximum number of concurrent sessions (0 = no limit)
MAX_SESSIONS=2

# Session params appended to map value (without leading "?")
SESSION_PARAMS=daysbeforeblizzard=3?maxplayers=8?thralls=2

# Optional Frida injector script (bat/cmd/exe)
FRIDA_PATH=.\frida\python_loader.bat

# External API for client app
API_TOKEN=change_me

# Enable telemetry bridge (Frida)
TELEMETRY_ENABLE=true

# Base port for telemetry HTTP bridge (actual port = base + game port)
TELEMETRY_BASE_PORT=8790
